<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">New Property</h1>
    <div class="col-6 offset-3">
        <form action="/properties" method="POST" novalidate class="need-validated">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="property[title]" required>
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" id="location" name="property[location]" required>
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image Url</label>
                <input type="text" class="form-control" id="image" name="property[image]" required>
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Property Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="property[price]" required>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea name="property[description]" id="description" type="text" class="form-control" required></textarea>
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Add A Property</button>
            </div>
        </form>
        <a href="/properties">All Campgrounds</a>
    </div>
</div>