<% layout('layouts/boilerplate') %>
    <div id="map" style="width: 100%; height: 500px;"></div>
    <div class="container">
        <h1>All Campgrounds</h1>
        <div>
            <a href="/properties/new">Add A Property</a>
        </div>

        <% for (let property of properties) {%>
            <div class="card mb-3">
                <div class="row">
                    <% if(property.images.length !==0) {%>
                        <div class="col-md-4">
                            <img src="<%=property.images[0].url%>" class="img-fluid" alt="">
                        </div>
                        <% } else { %>
                            <div class="col-md-4">
                                <img src="https://images.unsplash.com/photo-1518780664697-55e3ad937233?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=701&q=80"
                                    class="img-fluid" alt="">
                            </div>
                            <% } %>

                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%=property.title%>
                                        </h5>
                                        <p class="card-text">
                                            <%=property.description%>
                                        </p>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <%= property.location %>
                                            </small>
                                        </p>
                                        <a class="btn btn-primary" href="/properties/<%=property._id%>">View <%=
                                                property.title %></a>
                                    </div>
                                </div>
                </div>
            </div>
            <% } %>
    </div>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const properties = {features: <%-JSON.stringify(properties)%>}
    </script>

    <script src="/javascripts/clusterMap.js"></script>