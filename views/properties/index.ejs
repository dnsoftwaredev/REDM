<% layout('layouts/boilerplate') %>

    <h1>All Campgrounds</h1>
    <div>
        <a href="/properties/new">Add A Property</a>
    </div>

    <% for (let property of properties) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%=property.images[0].url%>" class="img-fluid" alt="">
                </div>

                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=property.title%>
                        </h5>
                        <p class="card-text">
                            <%=property.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= property.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/properties/<%=property._id%>">View <%= property.title %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>